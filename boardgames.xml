<aiml version="1.0.1" encoding="UTF-8">

<category> <pattern> HELLO </pattern>
  <template>Hello! How are you?</template> </category>

<category> <pattern> HELLO * </pattern>
  <template><srai>HELLO</srai></template> </category>

<category> <pattern> HI </pattern>
  <template><srai>HELLO</srai></template> </category>

<category> <pattern> HI * </pattern>
  <template><srai>HELLO</srai></template> </category>

<category> <pattern> HOW ARE YOU </pattern>
  <template>I'm functioning within normal parameters, thanks for asking.</template></category>

<category><pattern> I AM FINE </pattern>
  <template>That's good to know. What would you know about board games?</template></category>

<category><pattern> BYE </pattern>
  <template>^e$Goodbye</template></category>

<!-- Data query patterns -->
<category><pattern> WHAT IS * </pattern>
  <template>^sn$<star index="1"/></template></category>

<category><pattern> WHAT IS A GOOD GAME FOR *  PLAYERS</pattern>
  <template>^sp$<star index="1"/></template></category>

<category><pattern> WHAT GAMES HAVE BEEN PUBLISHED SINCE * </pattern>
  <template>^sy$<star index="1"/></template></category>

<category><pattern> WHAT GAMES HAVE THIS CATEGORY * </pattern>
  <template>^sc$<star index="1"/></template></category>

<category><pattern> WHAT GAMES HAVE THESE CATERGORIES * </pattern>
  <template>^sg$<star index="1"/></template></category>

<category><pattern> WHAT GAME HAS A * HOUR PLAYTIME</pattern>
  <template>^st$<star index="1"/></template></category>

<category><pattern> WHAT GAME HAS A SCORE MORE THAN * </pattern>
  <template>^ss$<star index="1"/></template></category>

<!-- Search via similarity of the description  -->
<category><pattern> I WANT A GAME ABOUT * </pattern>
  <template>^X$<star index="1"/></template></category>

<!-- Default reaction -->
<category><pattern> * </pattern>
  <template>^X$<star index="1+"/></template></category>

</aiml>
